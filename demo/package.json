{
  "name": "formiga-demo",
  "version": "0.0.1",
  "description": "A Form validator for React, using and customizing HTML5 Constraint Validation API",
  "keywords": [
    "js",
    "react",
    "form",
    "validation"
  ],  
  "author": "Donato Lorenzo <donato@afialapis.com>",
  "contributors": [
    "Donato Lorenzo <donato@afialapis.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/afialapis/formiga.git"
  },
  "bugs": {
    "url": "https://github.com/afialapis/formiga/issues"
  },
  "homepage": "https://formiga.afialapis.com/",
  "files": [
    "lib",
    "dist",
    "logo",
    "docaine.json",
    "formiga.png"
  ],
  "type": "module",
  "main": "./index.js",
    
  "scripts": {
    "clean-demo": "rm -rf demo/dist",
    "clean-test": "rm -f test/bundle.js",
    "clean-lib": "rm -rf lib && mkdir lib",
    "clean-dist": "rm -rf dist && mkdir dist",
    "lint": "eslint src",
    "test": "npm run clean-test && rollup -c rollup.test.js && karma start --singleRun",
    "lib": "npm run clean-lib && babel src -d lib",
    "dist": "npm run clean-dist && rollup -c",
    "prepare": "npm run clean-demo && npm run lint && npm run test && npm run clean-test && npm run lib && npm run dist",
    "demo": "npm run clean-demo && mkdir demo/dist && rollup -c rollup.demo.js -w",
    "reset": "npm run clean-demo && npm run clean-test && npm run clean-lib && npm run clean-dist && rm -fr node_modules package-lock.json && npm i"
  },

  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.4",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.1.0",
    "es6-promise": "^4.2.8",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.6",
    "react-dom": "^17.0.2",
    "rollup": "^2.67.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "react": ">=16.13.1"
  },
  "peerDependencies": {
    "react": ">=16.13.1"
  }
}
